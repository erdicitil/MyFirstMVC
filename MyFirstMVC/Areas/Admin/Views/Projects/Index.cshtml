@model IEnumerable<MyFirstMVC.Models.Project>

@{
    ViewBag.Title = "Projelerim";

}

<h2>Projelerim</h2>
<a href="@Url.Action("Create")" class="btn btn-primary">Yeni Proje</a>

<table class="table table-hover table-striped table-bordered table-condensed">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Photo)</th>
        <th>@Html.DisplayNameFor(model => model.Title)</th>
        <th>@Html.DisplayNameFor(model => model.Category.Name)</th>
        <th>Eylemler</th>
        
    </tr>

    @foreach (var item in Model)
    {
     <tr>
       <td>@Html.DisplayFor(modelItem => item.Id)</td>
       <td><img src="~/Uploads/@item.Photo" width="50"/></td>
       <td>@Html.DisplayFor(modelItem => item.Title)</td>
       <td>@Html.DisplayFor(modelitem => item.Category.Name)</td>

       <td>
           <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-success btn-sm">Düzenle</a>
           <span> </span>
           <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">Sil</a>
       </td>
     </tr>
    }

    </table>

